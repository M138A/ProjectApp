    <!-- RecyclerView AKA listview voor cards  -->
    <android.support.v7.widget.RecyclerView
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:id="@+id/rv"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"


        >
    </android.support.v7.widget.RecyclerView>
    <!-- Nieuwe cardview -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="150dp"
        android:id="@+id/cv"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:paddingBottom="4dp"

    >
    <!-- dit ^^ zou spacing moeten oplossen.. helaas -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
     
            android:id="@+id/RelaListCard"


            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_birthdays"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="Headline-temp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_age"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_below="@+id/person_name"
                android:text="Content-temp"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:padding="16dp"
                android:background="#29b6f6"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!-- Einde Nieuwe cardview -->




</LinearLayout>

<!-- DRAWER CONTENT -->
<fragment

    android:layout_gravity="start"
    android:layout_width="@dimen/nav_drawer_width"
    android:layout_height="match_parent"
    app:layout="@layout/fragment_navigation_drawer"
    android:name="info.androidhive.materialnavbar.Activity.NavigationDrawerFragment"
    tools:layout="@layout/fragment_navigation_drawer"
    android:id="@+id/drawer_fragment" />

